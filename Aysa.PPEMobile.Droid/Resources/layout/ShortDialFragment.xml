<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:orientation="vertical"
    android:padding="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        android:gravity="top"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_corners_background"
            android:paddingTop="10dp"
            >
            <TextView
                android:textColor="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textStyle="normal|bold"
                android:textAllCaps="true"
                android:text="@string/notes_Title_GTOP_"
                android:layout_gravity="center_horizontal"
            />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="@color/colorPrimary"
            />

            <TextView
                android:textColor="@color/darkerGrayLine"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20.0dp"
                android:layout_marginBottom="12dp"
                android:padding="10dp"
                android:textSize="11dp"
                android:textStyle="normal"
                android:text="@string/notes_GTOP_"
                android:layout_gravity="center"
                android:id="@+id/textView1" 
            />
        </FrameLayout>

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:padding="5dp">

            <EditText
                android:id="@+id/editTextSearch"
                android:layout_width="fill_parent"
                android:layout_height="38dp"
                android:layout_weight="0"
                android:background="@drawable/rounded_edittext"
                android:drawableLeft="@drawable/ic_search"
                android:drawablePadding="6dp"
                android:hint="@string/search_field"
                android:imeOptions="actionDone"
                android:autoText="true"
                android:inputType="text|textCapSentences|textAutoCorrect|textFilter"
                android:paddingLeft="10dp"
            />
            <Button
                android:id="@+id/cleanEventTextFilter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginBottom="1dp"
                android:background="@drawable/rounded_corners_background"
                android:drawableLeft="@drawable/close"
            />
        </FrameLayout>

        <ExpandableListView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingTop="20dp"
            android:scrollbars="vertical"
            android:groupIndicator="@android:color/transparent"
            android:divider="#f9f9f9" 
            android:dividerHeight="15dp" 
            android:childDivider="#ffff"/>
    </LinearLayout>
</FrameLayout>